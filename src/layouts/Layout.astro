---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body
    class="bg-gradient-to-b from-TMBlue to-TMPurple bg-fixed w-full grid items-center relative"
  >
    <main>
      <slot />
    </main>
  </body>
</html>
