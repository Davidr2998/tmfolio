---
interface Props {
  sectionTitle: string;
}

const { sectionTitle } = Astro.props;
---

<section
  class="mt-4 mb-4 md:mt-16 flex flex-col items-center gap-2 md:gap-8 w-full"
>
  <h2 class="text-6xl text-slate-50 font-extrabold mb-6 mt-12 capitalize">
    {sectionTitle}
  </h2>
  <div
    class="flex flex-col flex-wrap md:flex-row justify-center gap-2 md:gap-8"
  >
    <slot />
  </div>
</section>
